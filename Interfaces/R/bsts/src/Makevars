BOOM_DIR = `$(R_HOME)/bin/Rscript -e "cat(system.file(package='Boom'))"`
BOOM_LIB = ${BOOM_DIR}/lib${R_ARCH}/libboom.a
PKG_LIBS = ${BOOM_LIB} ${LAPACK_LIBS} ${BLAS_LIBS} ${FLIBS}
PKG_CPPFLAGS = -I${BOOM_DIR}/include -DNO_BOOST_THREADS -DNO_BOOST_FILESYSTEM -DADD_ -DR_NO_REMAP -DRLANGUAGE
CXX_STD = CXX11
